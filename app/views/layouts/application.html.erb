<!DOCTYPE html>
<html>
<head>
  <title>PicShare</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav>
    <a id="create_account" href="<%= new_user_registration_path %>">Sing Up</a>
  </nav>

  <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] = "You have signed up me@mail.com! Now go and share awesome pics!!!" %></p>
  <% end %>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% end %>

<%= yield %>

</body>
</html>
